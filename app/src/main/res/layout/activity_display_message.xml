<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kowalczyk.bdsm.activity.DisplayMessageActivity">

    <Button
            android:text="Show message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" tools:layout_constraintTop_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="81dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textStyle="bold" app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"/>
    <TextView
            android:text="To display message provide password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" tools:layout_constraintTop_creator="1"
            android:layout_marginTop="43dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="monospace" android:textColor="#1A237E"
            android:typeface="serif" android:textSize="24sp" android:textAlignment="center"
            android:textStyle="bold" app:layout_constraintRight_toRightOf="parent"/>
    <EditText
            android:layout_width="190dp"
            android:layout_height="49dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText6"
            app:layout_constraintLeft_toLeftOf="parent" tools:layout_constraintTop_creator="1"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"/>
    <Button
            android:text="Change Your password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" android:textStyle="bold"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="43dp" app:layout_constraintHorizontal_bias="0.469"/>
</android.support.constraint.ConstraintLayout>
